{
    "name": "No Trend Twitter",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://twitter.com/*"],
            "css": ["hide.css"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "No Trend Twitter",
        "default_icon": "icon.png"
    }
}
